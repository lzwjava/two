<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/personInfo"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="45dp"
        android:background="@drawable/common_list_item_background"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="@dimen/item_icon"
            android:layout_height="@dimen/item_icon"
            android:src="@drawable/person_info_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/personInfo"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>